<Window x:Class="My_Neighborhood_WPF_.PS4ConsolePages.SettingsCom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:My_Neighborhood_WPF_.PS4ConsolePages"
        mc:Ignorable="d"
        Title="Com Settings" Height="300" Width="300"  Loaded="Window_Loaded" Icon="/My Neighborhood(WPF);component/Images/favicon (1).ico">
    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Please select a COM port from the list below" VerticalAlignment="Top" Margin="35,10,0,0"/>
        <ListView x:Name="lstvcomdevices" HorizontalAlignment="Left" Height="190" Margin="10,70,0,0" VerticalAlignment="Top" Width="274" MouseDoubleClick="lstvcomdevices_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="btnRefresh" Content="Refresh list" HorizontalAlignment="Left" Margin="111,46,0,0" VerticalAlignment="Top" Width="75" Click="btnRefresh_Click"/>

    </Grid>
</Window>
